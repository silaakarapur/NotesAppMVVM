<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".uÄ±.fragment.CreateNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color5"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:maxLines="1"
            android:text="Add Notes"
            android:textSize="25dp"
            android:fontFamily="@font/dancing_script"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:maxLines="1"
            android:id="@+id/edt_title"
            android:fontFamily="@font/dancing_script"
            android:textColorHint="@color/white"
            android:background="@drawable/edt_txt_shape"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SubTitle"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:maxLines="1"
            android:id="@+id/edt_sub"
            android:fontFamily="@font/dancing_script"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/edt_txt_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/color1_dot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@drawable/color1_dot" />
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:id="@+id/color2_dot"
                android:background="@drawable/color2_dot"/>
            <ImageButton
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/color3_dot"
                android:background="@drawable/color3_dot"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Notes.."
            android:id="@+id/edt_notes"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:fontFamily="@font/dancing_script"
            android:textColorHint="@color/white"
            android:background="@drawable/edt_txt_shape"/>
    </LinearLayout>

<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnSave"
    app:backgroundTint="@color/color5"
    android:src="@drawable/ic_baseline_done_24"
    android:layout_gravity="bottom|right"
    android:layout_margin="26dp"/>

</FrameLayout>